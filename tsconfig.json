{
  // tsconfig is based on that of @react-three/drei with some modernization
  // https://github.com/pmndrs/drei/blob/master/tsconfig.json
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es2019",
      "dom"
    ],
    "outDir": "dist",
    "module": "preserve",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "verbatimModuleSyntax": true
  },
  "include": [
    "src",
    "stories"
  ],
  "exclude": [
    "node_modules"
  ]
}